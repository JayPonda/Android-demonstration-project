<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/general_padding">

    <ImageView
        android:id="@+id/demoImage"
        android:layout_width="@dimen/grid_image_dim"
        android:layout_height="@dimen/grid_image_dim"
        android:contentDescription="@string/sidebar_image"
        android:padding="@dimen/small_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/animal01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/demoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/demoImage"
        app:layout_constraintStart_toStartOf="@+id/demoImage"
        app:layout_constraintTop_toBottomOf="@+id/demoImage" />


</androidx.constraintlayout.widget.ConstraintLayout>